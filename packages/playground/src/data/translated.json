{
    "title": "D\u00e9p\u00f4t d'article Crossref",
    "type": "object",
    "definitions": {
        "doi_ref": {
            "title": "R\u00e9f\u00e9rence DOI uniquement",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "DOI": {
                    "type": "string",
                    "pattern": "^10\\.\\d{4,9}/[-._;()/:A-Z0-9^\\s]+"
                }
            },
            "required": [
                "DOI"
            ]
        },
        "unstructured_ref": {
            "title": "R\u00e9f\u00e9rence non structur\u00e9e",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "reference": {
                    "type": "string"
                }
            },
            "required": [
                "reference"
            ]
        },
        "structured_ref": {
            "title": "R\u00e9f\u00e9rence structur\u00e9e",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "journal_title": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                },
                "first_page": {
                    "type": "number"
                },
                "year": {
                    "type": "string",
                    "pattern": "^[1-9][0-9][0-9][0-9]$"
                }
            },
            "required": [
                "journal_title",
                "author",
                "year"
            ]
        },
        "page_span": {
            "title": "Dur\u00e9e de la page",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "first_page": {
                    "title": "Premi\u00e8re page",
                    "type": "number"
                },
                "last_page": {
                    "title": "Derni\u00e8re page",
                    "type": "number"
                }
            },
            "required": [
                "first_page",
                "last_page"
            ]
        },
        "article_number": {
            "title": "Num\u00e9ro de l'article",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "number": {
                    "title": "Nombre",
                    "type": "number"
                }
            },
            "required": [
                "number"
            ]
        },
        "online_issn": {
            "title": "eISSN",
            "description": "ISSN pour la version en ligne",
            "type": "string",
            "pattern": "[\\S]{4}\\-[\\S]{4}"
        },
        "print_issn": {
            "title": "ISSN",
            "description": "ISSN pour la version imprim\u00e9e",
            "type": "string",
            "pattern": "[\\S]{4}\\-[\\S]{4}"
        },
        "issn_section": {
            "title": "ISSN",
            "description": "ISSN en ligne et imprim\u00e9s",
            "type": "array",
            "minItems": 1,
            "maxItems": 2,
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/online_issn"
                    },
                    {
                        "$ref": "#/definitions/print_issn"
                    }
                ]
            }
        },
        "lic_qualifiers": {
            "title": "",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "start_date": {
                    "title": "Date de d\u00e9but",
                    "description": "La date \u00e0 laquelle la licence prend effet (g\u00e9n\u00e9ralement la m\u00eame que la date de publication)",
                    "type": "string",
                    "format": "date"
                },
                "jav": {
                    "title": "Version JAV",
                    "type": "string",
                    "enum": [
                        "Accepted Manuscript",
                        "Version of Record"
                    ],
                    "default": "Version of Record"
                }
            },
            "required": [
                "start_date",
                "jav"
            ]
        },
        "cc_license": {
            "title": "Licence commune cr\u00e9ative",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "cc_url": {
                    "title": "URL de la licence Creative Commons",
                    "description": "L'URL de la licence Creative Commons",
                    "type": "string",
                    "enum": [
                        "https://creativecommons.org/licenses/by/4.0/",
                        "https://creativecommons.org/licenses/by-sa/4.0/",
                        "https://creativecommons.org/licenses/by-nd/4.0/",
                        "https://creativecommons.org/licenses/by-nc/4.0/",
                        "https://creativecommons.org/licenses/by-nc-sa/4.0/",
                        "https://creativecommons.org/licenses/by-nc-nd/4.0/"
                    ],
                    "defualt": "https://creativecommons.org/licenses/by/4.0/"
                },
                "qualifiers": {
                    "$ref": "#/definitions/lic_qualifiers"
                }
            },
            "required": [
                "cc_url"
            ]
        },
        "other_license": {
            "title": "Autre licence",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "other_url": {
                    "title": "URL de la licence",
                    "description": "Une URL qui pointe vers une d\u00e9claration de droits d'auteur ou des conditions g\u00e9n\u00e9rales",
                    "type": "string",
                    "format": "uri",
                    "default": "https://example.com/license"
                },
                "qualifiers": {
                    "$ref": "#/definitions/lic_qualifiers"
                }
            },
            "required": [
                "other_url"
            ]
        },
        "license_ref": {
            "title": "Informations sur la licence",
            "description": "Informations de licence pour AM, VOR",
            "type": "array",
            "minItems": 0,
            "maxItems": 10,
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/cc_license"
                    },
                    {
                        "$ref": "#/definitions/other_license"
                    }
                ]
            }
        }
    },
    "properties": {
        "depositor": {
            "title": "Informations sur le d\u00e9posant",
            "description": "Ces informations nous permettent de vous tenir au courant de l'avancement du d\u00e9p\u00f4t",
            "type": "object",
            "properties": {
                "depositor_name": {
                    "title": "Nom du d\u00e9posant",
                    "description": "votre nom",
                    "type": "string"
                },
                "email_address": {
                    "type": "string",
                    "title": "Adresse e-mail",
                    "description": "adresse e-mail \u00e0 laquelle envoyer les erreurs",
                    "format": "email"
                }
            }
        },
        "journal": {
            "title": "Informations sur le journal",
            "type": "object",
            "properties": {
                "full_title": {
                    "title": "Titre du journal",
                    "type": "string",
                    "examples": [
                        "Journal of Psychoceramics"
                    ]
                },
                "abbrev_title": {
                    "title": "Titre abr\u00e9g\u00e9 de la revue",
                    "type": "string",
                    "examples": [
                        "JOPC"
                    ]
                },
                "volume": {
                    "title": "Le volume",
                    "type": "number"
                },
                "issue": {
                    "title": "Probl\u00e8me",
                    "type": "number"
                },
                "publication_date": {
                    "title": "Date de publication",
                    "type": "string",
                    "format": "date"
                },
                "issns": {
                    "$ref": "#/definitions/issn_section"
                }
            }
        },
        "articles": {
            "title": "Des articles",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "Article de revue",
                "type": "object",
                "properties": {
                    "titles": {
                        "title": "Titres",
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "title": "Titre",
                            "type": "object",
                            "properties": {
                                "title_language": {
                                    "title": "Langue du titre",
                                    "description": "Le code ISO de la langue dans laquelle se trouve le texte du titre",
                                    "type": "string",
                                    "default": "en",
                                    "enum": [
                                        "en",
                                        "es",
                                        "pt"
                                    ]
                                },
                                "title_text": {
                                    "title": "Texte du titre",
                                    "description": "Le titre de l'article dans la langue s\u00e9lectionn\u00e9e",
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "resolution_information": {
                        "title": "Informations sur la r\u00e9solution",
                        "type": "object",
                        "properties": {
                            "doi": {
                                "title": "EST CE QUE JE",
                                "description": "Le DOI que vous souhaitez attribuer \u00e0 cet article",
                                "type": "string",
                                "pattern": "^10\\.\\d{4,9}/[-._;()/:A-Z0-9^\\s]+",
                                "message": "You must enter a valid DOI"
                            },
                            "resource": {
                                "title": "URL de r\u00e9solution",
                                "description": "URL vers laquelle le DOI doit r\u00e9soudre",
                                "type": "string",
                                "format": "url"
                            },
                            "similarity_check_url": {
                                "title": "URL de v\u00e9rification de similarit\u00e9",
                                "description": "URL pour le contr\u00f4le de similarit\u00e9 pour obtenir le texte int\u00e9gral",
                                "type": "string",
                                "format": "url"
                            }
                        }
                    },
                    "publication_date": {
                        "title": "Date de publication",
                        "type": "string",
                        "format": "date"
                    },
                    "article_location": {
                        "title": "Emplacement de l'article",
                        "description": "entrez la longueur de page ou le num\u00e9ro d'article",
                        "type": "array",
                        "minItems": 1,
                        "maxItems": 1,
                        "items": {
                            "oneOf": [
                                {
                                    "$ref": "#/definitions/page_span"
                                },
                                {
                                    "$ref": "#/definitions/article_number"
                                }
                            ]
                        }
                    },
                    "abstract": {
                        "title": "Abstrait",
                        "description": "entrez un r\u00e9sum\u00e9 des JAT",
                        "type": "string"
                    },
                    "contributors": {
                        "title": "Contributeurs",
                        "type": "object",
                        "properties": {
                            "people": {
                                "title": "Gens",
                                "type": "array",
                                "items": {
                                    "title": "La personne",
                                    "type": "object",
                                    "properties": {
                                        "-contributor_role": {
                                            "title": "R\u00f4le de contributeur",
                                            "type": "string",
                                            "enum": [
                                                "author",
                                                "editor",
                                                "chair",
                                                "translator"
                                            ],
                                            "default": "author"
                                        },
                                        "-sequence": {
                                            "title": "S\u00e9quence des contributeurs",
                                            "type": "string",
                                            "enum": [
                                                "first",
                                                "addtional"
                                            ]
                                        },
                                        "ORCID": {
                                            "type": "string",
                                            "title": "ORCID",
                                            "pattern": "(\\d{4}\\-\\d{4}\\-\\d{4}\\-\\d{3}(?:\\d|X))"
                                        },
                                        "given_name": {
                                            "title": "Pr\u00e9nom",
                                            "type": "string"
                                        },
                                        "surname": {
                                            "title": "Nom de famille",
                                            "type": "string"
                                        },
                                        "suffix": {
                                            "title": "Suffixe",
                                            "description": "",
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "license": {
                        "$ref": "#/definitions/license_ref"
                    },
                    "references": {
                        "title": "Les r\u00e9f\u00e9rences",
                        "type": "array",
                        "minLength": 1,
                        "uniqueItems": true,
                        "items": {
                            "anyOf": [
                                {
                                    "$ref": "#/definitions/doi_ref"
                                },
                                {
                                    "$ref": "#/definitions/unstructured_ref"
                                },
                                {
                                    "$ref": "#/definitions/structured_ref"
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}
